{
  "name": "echo-karriere-backend",
  "version": "0.0.1",
  "description": "Backend service for echokarriere.no",
  "author": "Sondre Nilsen <nilsen.sondre@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:save": "npx prisma migrate save --experimental",
    "prisma:up": "npx prisma migrate up --experimental",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio --experimental",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.4.1",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/platform-fastify": "^7.2.0",
    "@prisma/client": "^2.0.1",
    "apollo-server-fastify": "^2.15.0",
    "graphql": "^15.1.0",
    "graphql-tools": "^6.0.10",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@prisma/cli": "^2.0.1",
    "@sondr3/eslint-config-typescript": "^0.6.0",
    "@sondr3/prettier": "^0.2.0",
    "@sondr3/tsconfig": "^0.4.0",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.0",
    "@types/node": "^14.0.13",
    "@types/supertest": "^2.0.8",
    "eslint": "7.2.0",
    "husky": "^4.2.5",
    "jest": "26.0.1",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "prettier": "@sondr3/prettier",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
