generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(uuid()) @db.Uuid
  title       String    @unique
  description String?
  slug        String    @unique
  createdAt   DateTime  @default(now()) @db.Timestamptz(6)
  modifiedAt  DateTime? @db.Timestamptz(6)
}

model Company {
  id         String    @id @default(uuid()) @db.Uuid
  name       String    @unique
  homepage   String
  jobs       Job[]
  createdAt  DateTime  @default(now()) @db.Timestamptz(6)
  modifiedAt DateTime? @db.Timestamptz(6)
}

model User {
  id      String  @id @default(uuid()) @db.Uuid
  enabled Boolean
  name    String
  email   String
  roles   Role[]
}

model Role {
  id          String  @id @default(uuid()) @db.Uuid
  name        String  @unique
  description String?
  users       User[]
}

enum JobType {
  FULL
  PART
  SUMMER
  OTHER
}

model Job {
  id              String    @id @default(uuid()) @db.Uuid
  title           String
  description     String
  location        String
  url             String    @unique
  type            JobType
  deadline        DateTime? @db.Timestamptz(6)
  finalExpiration DateTime? @db.Timestamptz(6)
  companyId       String    @db.Uuid
  company         Company   @relation(fields: [companyId], references: [id])
}
